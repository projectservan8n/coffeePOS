{
  "name": "coffee-shop-pos",
  "version": "1.0.0",
  "description": "Modern Coffee Shop POS System with Google Sheets backend and advanced ingredient tracking",
  "main": "server.js",
"scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint *.js",
    "lint:fix": "eslint *.js --fix",
    "format": "prettier --write *.js *.html *.css *.md",
    "build": "npm run lint && npm test",
    "deploy": "npm run build && railway up",
    "setup": "npm install && npm run init-env",
    "init-env": "node -e \"const fs = require('fs'); if (!fs.existsSync('.env')) { fs.writeFileSync('.env', 'NODE_ENV=development\\nPORT=3000\\nSHOP_NAME=Coffee Paradise\\nCURRENCY=PHP\\nTAX_RATE=0.12\\nJWT_SECRET=your-super-secret-jwt-key\\nN8N_DATA_LOAD_WEBHOOK=\\nN8N_PROCESS_ORDER_WEBHOOK=\\nN8N_UPDATE_INVENTORY_WEBHOOK=\\n'); console.log('âœ… .env file created'); }\"",
    "demo": "NODE_ENV=development npm start",
    "prod": "NODE_ENV=production npm start",
    "health": "curl -f http://localhost:3000/health || exit 1",
    "setup-n8n": "echo 'Please configure your n8n webhook URLs in .env file'",
    "test-webhooks": "node scripts/test-webhooks.js",
  "keywords": [
    "pos",
    "coffee-shop",
    "google-sheets",
    "n8n",
    "point-of-sale",
    "restaurant",
    "inventory",
    "philippines",
    "saas",
    "express",
    "nodejs",
    "ingredient-tracking",
    "business-intelligence"
  ],
  "author": {
    "name": "Coffee POS Team",
    "email": "info@coffeepos.ph",
    "url": "https://coffeepos.ph"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/coffee-shop-pos.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/coffee-shop-pos/issues"
  },
  "homepage": "https://github.com/yourusername/coffee-shop-pos#readme",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "compression": "^1.7.4",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "express-rate-limit": "^6.8.1",
    "express-validator": "^7.0.1",
    "morgan": "^1.10.0",
    "winston": "^3.10.0",
    "axios": "^1.5.0",
    "node-fetch": "^3.3.2",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.5",
    "moment": "^2.29.4",
    "moment-timezone": "^0.5.43",
    "lodash": "^4.17.21",
    "uuid": "^9.0.0",
    "node-cron": "^3.0.2",
    "socket.io": "^4.7.2",
    "redis": "^4.6.8",
    "pg": "^8.11.3",
    "mongoose": "^7.5.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.4",
    "supertest": "^6.3.3",
    "eslint": "^8.47.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.28.1",
    "prettier": "^3.0.2",
    "@types/node": "^20.5.7",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "cross-env": "^7.0.3",
    "concurrently": "^8.2.1",
    "pm2": "^5.3.0"
  },
  "optionalDependencies": {
    "puppeteer": "^21.1.1",
    "canvas": "^2.11.2",
    "chartjs-node-canvas": "^4.1.6",
    "pdfkit": "^0.13.0",
    "xlsx": "^0.18.5",
    "csv-parser": "^3.0.0",
    "archiver": "^5.3.2"
  },
  "peerDependencies": {
    "react": ">=17.0.0",
    "react-dom": ">=17.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "collectCoverageFrom": [
      "*.js",
      "!node_modules/**",
      "!coverage/**",
      "!jest.config.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "eslintConfig": {
    "extends": ["airbnb-base"],
    "env": {
      "node": true,
      "es6": true,
      "jest": true
    },
    "rules": {
      "no-console": "off",
      "class-methods-use-this": "off",
      "no-underscore-dangle": "off",
      "consistent-return": "off"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{html,css,md}": [
      "prettier --write"
    ]
  },
  "pm2": {
    "apps": [
      {
        "name": "coffee-pos",
        "script": "server.js",
        "instances": "max",
        "exec_mode": "cluster",
        "env": {
          "NODE_ENV": "production",
          "PORT": 3000
        },
        "error_file": "logs/err.log",
        "out_file": "logs/out.log",
        "log_file": "logs/combined.log",
        "time": true,
        "watch": false,
        "max_memory_restart": "1G",
        "node_args": "--max-old-space-size=1024"
      }
    ]
  },
  "railway": {
    "build": {
      "builder": "NIXPACKS"
    },
    "deploy": {
      "numReplicas": 1,
      "sleepApplication": false,
      "restartPolicyType": "ON_FAILURE"
    }
  },
  "funding": {
    "type": "individual",
    "url": "https://github.com/sponsors/yourusername"
  },
  "config": {
    "port": 3000,
    "mongoUrl": "mongodb://localhost:27017/coffeepos",
    "redisUrl": "redis://localhost:6379"
  },
  "directories": {
    "test": "tests",
    "doc": "docs",
    "lib": "src"
  },
  "files": [
    "server.js",
    "index.html",
    "style.css",
    "script.js",
    "railway.json",
    "README.md",
    "LICENSE",
    "documentation/",
    "assets/",
    "public/"
  ],
  "nodemonConfig": {
    "watch": [
      "server.js",
      "src/",
      ".env"
    ],
    "ext": "js,json,html,css",
    "ignore": [
      "node_modules/",
      "tests/",
      "coverage/",
      "logs/"
    ],
    "env": {
      "NODE_ENV": "development"
    },
    "delay": 1000
  },
  "release": {
    "branches": ["main", "master"],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  },
  "nyc": {
    "include": [
      "*.js",
      "src/**/*.js"
    ],
    "exclude": [
      "tests/**",
      "coverage/**",
      "node_modules/**"
    ],
    "reporter": [
      "text",
      "lcov",
      "html"
    ],
    "check-coverage": true,
    "lines": 80,
    "statements": 80,
    "functions": 80,
    "branches": 80
  }
}